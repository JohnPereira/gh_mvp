<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_driversResponse"
    android:layout_height="@dimen/height_cardView_driversResponse"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginHorizontal="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="0.73">
            <ImageView
                android:id="@+id/imgDriverAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/avatar"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="0.27"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtUsernameCard"
                android:text="Alejandro Pereira Gonzalez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/txtEstimatedTimeCard"
                android:text="A 15 minutos aprox."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"/>
            <TextView
                android:id="@+id/txtTotalValueCard"
                android:text="Precio: $15.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15">
                <ImageView
                    android:id="@+id/imgStar1Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icons8_star_48"/>
                <ImageView
                    android:id="@+id/imgStar2Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icons8_star_48"/>
                <ImageView
                    android:id="@+id/imgStar3Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icons8_star_48"/>
                <ImageView
                    android:id="@+id/imgStar4Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icons8_star_48"/>
                <ImageView
                    android:id="@+id/imgStar5Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icons8_star_48"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>